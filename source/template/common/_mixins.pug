//- Navigation
mixin nav(className, items, activeItem, links)
	ul(class=`${className}__list`)
		each item, ndx in items
			li(class=`${className}__item ` + ( (ndx === activeItem ) ? `${className}__item_active` : ''))
				a(class=`${className}__link` href="#") #{item}


//- Social links
mixin icon_fa(className, name, url)
	a(href=`${url}` class=`${className}__link`)
		i(class='fa fa-' + `${name} ` + `${className}__icon`)