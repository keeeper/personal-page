//- Navigation
mixin nav(className, items)
	ul(class=`${className}__list`)
		each item, ndx in items
			li(class=`${className}__item ` + ( (item.name === currentPage) ? `${className}__item_active` : ''))
				a(class=`${className}__link` href=`${item.link}`) #{item.name}

//- Social links
mixin icon_link_fa(className, name, url)
	a(href=`${url}` class=`${className}__link`)
		i(class='fa fa-' + `${name} ` + `${className}__icon`)

//- Icons
mixin icon_fa(className, name)
	i(class='fa fa-' + `${name} ` + `${className}__icon`)