extends ../_template
block variables
	- currentPage = 'Мои работы'

block title
	title Мои работы
	
block content
	header.header.header_inner-page-high
		.personal-info.personal-info_works-theme
			include ../common/personal-info
		.social-nav-wrapper.social-nav-wrapper_theme-green.social-nav-wrapper_absolute
			include ../common/social-links	
		include ../common/fs-nav
		svg(class="traingle triangle_works-theme" viewBox="0 0 1000 86" preserveAspectRatio="none")
			polygon(class="triangle__left" points="0,0 0,86 500.8,86 500,84" fill="none")
			polygon(class="triangle__right" points="1000,00 1000,86 500,86 500,84" fill="none")

	main(class="content content_nomargin")
		section.works
			.extra-title-wrapper.extra-title-wrapper_works
				h3(class="page-title page-title_extra page-title_works") Мои работы
			
			include ../common/slider
		section.content-bottom
			.extra-title-wrapper.extra-title-wrapper_no-bg
				h3(class="page-title page-title_extra page-title_extramargin2") Что обо мне<br>говорят
			.container.container_testimonials
				include ../common/testimonials
				include ../common/contact-form

	.footer-wrapper
		include ../common/footer